{
	"name": "ts-server",
	"version": "1.0.0",
	"description": "A typescript nodejs server",
	"main": "dist/index.js",
	"bin": {
		"init": "setup.js"
	},
	"engines": {
		"node": "^18",
		"npm": "^9",
		"yarn": "please-use-npm-instead"
	},
	"engineStrict": true,
	"scripts": {
		"prepare": "echo 'installing husky...' && husky install",
		"prestart:dev": "npm run typeorm:up",
		"start:dev": "nodemon --legacy-watch",
		"build": "rimraf ./dist && tsc",
		"postbuild": "node ./copy-assets",
		"prestart": "npm run typeorm-prod:up",
		"start": "node .",
		"lint": "eslint src --ext .ts",
		"lint:fix": "eslint src --ext .ts --fix",
		"prettify": "prettier --config .prettierrc '**/*.{ts,js,json}'",
		"prettify:fix": "prettier --config .prettierrc '**/*.{ts,js,json}' --write",
		"prettify:watch": "onchange '**/*.{ts,js,json}' -- prettier --config .prettierrc --write {{changed}}",
		"dev:up": "make run-dev-up",
		"dev:down": "make run-dev-down",
		"predev:down_hard": "make run-backup",
		"dev:down_hard": "make run-dev-down-hard",
		"test": "make run-test-up",
		"posttest": "make run-test-down",
		"preexec-tests": "npm run typeorm:up",
		"exec-tests": "mocha -r ts-node/register '__tests__/**/*.spec.ts' --exit",
		"typeorm-prod": "typeorm-ts-node-commonjs -d dist/typeorm",
		"typeorm-prod:up": "npm run typeorm-prod migration:run",
		"typeorm": "typeorm-ts-node-commonjs -d src/typeorm",
		"typeorm:up": "npm run typeorm migration:run",
		"typeorm:down": "npm run typeorm migration:revert",
		"commit": "commit"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/shahanahmed86/ts-server.git"
	},
	"keywords": [
		"ts-server",
		"nodejs",
		"node",
		"typescript",
		"ts"
	],
	"author": "Shahan Ahmed Khan",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/shahanahmed86/ts-server/issues"
	},
	"homepage": "https://github.com/shahanahmed86/ts-server#readme",
	"dependencies": {
		"@apollo/server": "^4.5.0",
		"bcryptjs": "^2.4.3",
		"connect-redis": "^7.1.0",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"ejs": "^3.1.9",
		"express": "^4.18.2",
		"express-fileupload": "^1.4.0",
		"express-session": "^1.17.3",
		"graphql": "^16.6.0",
		"graphql-subscriptions": "^2.0.0",
		"graphql-ws": "^5.12.0",
		"husky": "^8.0.0",
		"i18n": "^0.15.1",
		"joi": "^17.7.0",
		"jsonwebtoken": "^9.0.0",
		"lodash": "^4.17.21",
		"morgan": "^1.10.0",
		"node-cron": "^3.0.2",
		"pg": "^8.4.0",
		"redis": "^4.6.8",
		"reflect-metadata": "^0.1.13",
		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-express": "^4.6.0",
		"typeorm": "0.3.11",
		"ws": "^8.13.0",
		"zod": "^3.21.4"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.6.5",
		"@commitlint/config-conventional": "^17.6.5",
		"@commitlint/prompt-cli": "^17.6.5",
		"@types/bcryptjs": "^2.4.2",
		"@types/chai": "^4.3.4",
		"@types/cookie-parser": "^1.4.4",
		"@types/cors": "^2.8.13",
		"@types/ejs": "^3.1.2",
		"@types/express": "^4.17.17",
		"@types/express-fileupload": "^1.4.1",
		"@types/express-session": "^1.17.7",
		"@types/i18n": "^0.13.6",
		"@types/inquirer": "^8.2.5",
		"@types/jsonwebtoken": "^9.0.1",
		"@types/lodash": "^4.14.191",
		"@types/mocha": "^10.0.1",
		"@types/morgan": "^1.9.4",
		"@types/node": "^18.11.19",
		"@types/node-cron": "^3.0.7",
		"@types/swagger-jsdoc": "^6.0.1",
		"@types/swagger-ui-express": "^4.1.3",
		"@types/ws": "^8.5.4",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.50.0",
		"chai": "^4.3.7",
		"chai-http": "^4.3.0",
		"eslint": "^8.33.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-prettier": "^4.2.1",
		"inquirer": "^8.2.5",
		"lint-staged": "^13.1.0",
		"mocha": "^10.2.0",
		"nodemon": "^2.0.20",
		"onchange": "^7.1.0",
		"prettier": "^2.8.3",
		"rimraf": "^4.1.2",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.5"
	}
}
