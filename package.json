{
	"name": "ts-server",
	"version": "1.0.0",
	"description": "A typescript nodejs server",
	"main": "dist/index.js",
	"scripts": {
		"prepare": "echo 'installing husky...' && husky install",
		"start:dev": "nodemon",
		"build": "rimraf ./dist && tsc",
		"prestart": "npm run build",
		"start": "node .",
		"lint": "eslint src --ext .ts",
		"prettify": "prettier --config .prettierrc 'src/**/*.ts' --write",
		"prettify-watch": "onchange 'src/**/*.ts' -- prettier --config .prettierrc --write {{changed}}"
	},
	"lint-staged": {
		"src/**/*.{ts,js}": [
			"npm run prettify",
			"npm run lint",
			"git add ."
		]
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/shahanahmed86/ts-server.git"
	},
	"keywords": [
		"ts-server",
		"nodejs",
		"node",
		"typescript",
		"ts"
	],
	"author": "Shahan Ahmed Khan",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/shahanahmed86/ts-server/issues"
	},
	"homepage": "https://github.com/shahanahmed86/ts-server#readme",
	"dependencies": {
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"express-fileupload": "^1.4.0",
		"husky": "^8.0.0",
		"morgan": "^1.10.0"
	},
	"devDependencies": {
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.17",
		"@types/express-fileupload": "^1.4.1",
		"@types/morgan": "^1.9.4",
		"@types/node": "^18.11.19",
		"@typescript-eslint/eslint-plugin": "^5.50.0",
		"@typescript-eslint/parser": "^5.50.0",
		"eslint": "^8.33.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-prettier": "^4.2.1",
		"lint-staged": "^13.1.0",
		"nodemon": "^2.0.20",
		"onchange": "^7.1.0",
		"prettier": "^2.8.3",
		"rimraf": "^4.1.2",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.5"
	}
}
